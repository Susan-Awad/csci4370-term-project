<!DOCTYPE html>
<html lang="en">
{{> fragments/html_header}}

<body>

    {{> fragments/top_bar}}

  <main class="transaction-container"> 
    <h1> Transactions</h1> 

    {{#errorMsg}}
    <div class="alert alert-danger">
    {{.}}
    </div> 
    {{/errorMsg}}

    <!-- Add transacton --> 
    <section class="card add-card"> 
        <h2 class="title"> Add Transaction</h2> 
        <form method="post" action="/transactions/add" class="form-grid"> 
            <div class="form-row"> 
                <label for="add-date">Date</label> 
                <input type="date" id="add-date" name= "date" required> 
            </div> 

            <div class="form-row"> 
                <label for="add-description">Description</label> 
                <input type="text" id="add-description" name= "description" required> 
            </div> 

            <div class="form-row"> 
                <label for="add-amount">Amount</label> 
                <input type="number" step="0.01" id="add-amount" name="amount" required> 
            </div> 

            <div class="form-row"> 
                <select name="categoryId" required> 
                <label for="pick-category">Category
                {{#categories}}
                    <option value="{{categoryId}}">{{categoryName}}</option>
                {{/categories}}
                </select> 
                </label> 
            </div> 

            <div class="form-actions"> 
                <button type="submit" class="button"> Add</button> 
            </div>
           </form> 
    </section> 

    <!-- Filters --> 
    <form method="get" action="/transactions" class="filter-form"> 
        <label> 
        From: 
        <input type="date" name="from"> 
        </label> 

        <label> 
        To: 
       <input type="date" name="to">
        </label> 

        <label> 
        Type: 
        <select name="type">
        <option value="">All</option> 
        <option value="Income"> Income</option> 
        <option value="Expense"> Expense</option> 

        </select> 
        </label> 

        <!-- Category filter --> 
        <select name="categoryId" required> 
                <label for="pick-category">Category
                {{#categories}}
                    <option value="{{categoryId}}">{{categoryName}}</option>
                {{/categories}}
                </select> 
                </label> 

        <button type="submit">Apply Filter</button>
        </form> 

       

        {{#isNoContent}}
            <p> No transactions found.</p> 
        {{/isNoContent}}

        {{^isNoContent}}
            <table class="transaction-table">
                <thead> 
                <tr> 
                <th>Date</th> 
                <th>Description</th> 
                <th>Type</th> 
                <th>Amount</th> 
                <th>Actions</th> 
                </tr> 
                </thead> 

            <tbody> 
            {{#transactions}}
            <tr> 
            <td> {{date}}</td> 
            <td> {{description}}</td>
            <td> {{type}}</td>
            <td> {{amount}}</td>
            <td class="cell-actions">
                    <a href="/transactions?editId={{transactionId}}" class="link-button">Edit</a>
            

            <form method="post" action="/transactions/delete/{{transactionId}}" style="display:inline;"> 
                <button type="submit">Delete</button>
                </form> 
                </td> 
                </tr> 
            {{/transactions}}
                </tbody>
            </table> 
        {{/isNoContent}}
    


        <!-- Edit Transaction --> 
        {{#editTransaction}}
        <section class="card edit-card"> 
            <h2 class"title">Edit Transaction</h2> 
            <form method="post" action="/transactions/edit" class="form-grid"> 
                <input type="hidden" name="transactionId" value={{transactionId}}>
            
            <div class="form-row"> 
                <label for="edit-date"> Date </label> 
                <input type="date" id="edit-date" name="date" value={{date}} required> 
            </div> 

            <div class="form-row"> 
                <label for="edit-description"> Description </label> 
                <input type="text" id="edit-description" name="description" value={{description}} required> 
            </div> 

            <div class="form-row"> 
                <label for="add-amount">Amount</label> 
                <input type="number" step="any" id="add-amount" name= "amount" required> 
            </div> 

            <div class="form-row"> 
            <select name="categoryId" required> 
                <label for="pick-category">Category
                {{#categories}}
                    <option value="{{categoryId}}">{{categoryName}}</option>
                {{/categories}}
                </select> 
                </label> 
            </div> 

            <div class="form-actions"> 
                <a href="/transactions" class="button cancel-button"> Cancel</a> 
                <button type="submit" class="button"> Save </button> 
            </div>
        </form> 
    </section> 
        {{/editTransaction}}


  </main>

    {{> fragments/footer}}

</body>

</html>