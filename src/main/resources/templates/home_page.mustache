<!DOCTYPE html>
<html lang="en">

{{> fragments/html_header}}

<body>

{{> fragments/top_bar}}

<div class="container">
    
    <h1 class="page-title">Welcome, {{firstName}}!</h1>
    <h2 class="month-title">Overview for {{currentMonth}}</h2>

    <!-- Summary Cards -->
    <div class="summary-cards">
        <div class="card income-card">
            <h3>Total Income</h3>
            <p class="amount positive">${{totalIncome}}</p>
        </div>

        <div class="card expense-card">
            <h3>Total Expenses</h3>
            <p class="amount negative">${{totalExpense}}</p>
        </div>

        <div class="card net-card">
            <h3>Net</h3>
            <p class="amount net">${{net}}</p>
        </div>
    </div>

    <!-- Recent Transactions -->
    <h2 class="section-title">Recent Transactions</h2>

    {{^transactions}}
        <p>No transactions yet. <a href="/transactions/add">Add your first one â†’</a></p>
    {{/transactions}}

    {{#transactions}}
    <table class="transactions-table">
        <tr>
            <th>Date</th>
            <th>Type</th>
            <th>Amount</th>
            <th>Description</th>
        </tr>

        {{#transactions}}
        <tr>
            <td>{{date}}</td>
            <td>{{type}}</td>
            <td class="td-amount">${{amount}}</td>
            <td>{{description}}</td>
        </tr>
        {{/transactions}}
    </table>
    {{/transactions}}

</div>

</body>
</html>