<div class="container">
    <!-- Budget Section -->
    <h2 class="page-title">My Budgets</h2>

    <!-- Add Budget -->
    <div class="add-budget-container">
        <form method="post" action="/budgets/createbudget">
            <div class="budgetMonth">
                <input type="month" id="budgetMonth" name="budgetMonth" required>
            </div>
            <div class="budgetCategories">
                <select id="category" name="categoryId" required>
                    <option value="" selected disabled>Category</option>
                    {{#categories}}
                        <option value="{{categoryId}}">{{categoryName}} ({{categoryType}})</option>
                    {{/categories}}
                </select>
            </div>
            <div class="budgetAmount">
                <input type="number" placeholder="e.g. 20.00" id="amount" name="amount" step="0.01" min="0" required>
            </div>
            <button type="submit" class="add-budget-btn">Add Budget</button>
        </form>
    </div>

    <div class="card total-budget-card">
        <h3>Total Budget for the Month:</h3>
        <p class="amount net">${{monthlyBudget}}</p>
    </div>

    <!-- Budget Items -->
    <h2 class="current-budget-header">Current Budgets</h2>
    <div class="budget-items">
        {{#budgets}}
                <div class="budget-item-view card">
                    <h3>{{categoryName}}</h3>
                    <p>Month: {{budget_month}}
                    <p>Amount: ${{amount_budgeted}}</p>
                    <p>Type: {{categoryType}}</p>
                    <form method="post" action="/budgets/deletebudget">
                        <div class="card-buttons">
                            <button type="button" onClick="editCard(this)" class="edit-budget-btn">Edit</button>
                            <input type="hidden" name="budget_id" value="{{budget_id}}">
                            <button type="submit" class="delete-budget-btn">Delete</button>
                        </div>
                    </form>
                </div>

                <div class="budget-item-edit card">
                    <form method="post" action="/budgets/updatebudget">
                        <select id="categories" name="categoryId" required>
                            <option value="{{categoryId}}" selected>{{categoryName}} ({{categoryType}})</option>
                            {{#categories}}
                                <option value="{{categoryId}}">{{categoryName}} ({{categoryType}})</option>
                            {{/categories}}
                        </select>
                        <input type="month" id="budgetMonth" name="budgetMonth" value="{{budget_month}}" required></input>
                        <input type="number" placeholder="e.g. 20.00" id="amount" name="amount" step="0.01" min="0" value="{{amount_budgeted}}" required></input>
                        <input type="hidden" name="budget_id" value="{{budget_id}}">
                        
                        <div class="card-buttons">
                            <button type="submit" onClick="saveCard()" class="save-budget-btn">Save</button>
                            <button type="button" onClick="cancelCard(this)" class="cancel-budget-btn">Cancel</button>
                        </div>
                    </form>
                </div>
            {{/budgets}}
    </div>
</div>